<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="BlurifyAppBaseTheme" parent="Theme.AppCompat.Light" />

	<!-- Application theme. -->
	<style name="BlurifyAppTheme" parent="BlurifyAppBaseTheme">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimary</item>
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
	</style>

	<style name="ButtonText">
		<item name="android:textColor">#555555</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:shadowColor">#d4d4d4</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:background">@drawable/material_button_xml</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingRight">20dp</item>
		<item name="android:paddingTop">7dp</item>
		<item name="android:paddingBottom">9dp</item>
		<item name="android:minHeight">0dp</item>
		<item name="android:textSize">18sp</item>
	</style>

</resources>